.docs-content {
  font-family ProximaNova !important
  font-size 14px
  color #525d62

  h1 {
    margin 0
    padding-top 0
    padding-bottom 30px
    font-size 36px
    font-weight $font-weight-normal
  }

  h2 {
    margin 0
    padding-top 0
    padding-bottom 20px
    font-size 30px
    font-weight $font-weight-bolder
  }

  h3 {
    margin 0
    padding-top 0
    padding-bottom 20px
    font-size 22px
    font-weight $font-weight-bold
  }

  h4 {
    margin 0
    padding-top 0
    padding-bottom 20px
    font-size 18px
    font-weight $font-weight-bold
  }

  h5 {
    margin 0
    padding-top 0
    padding-bottom 20px
    font-size 16px
    font-weight $font-weight-bold
  }

  h6 {
    margin 0
    padding-top 0
    padding-bottom 20px
    font-size 14px
    color #677277
    font-weight $font-weight-bold
  }

  p {
    margin 0
    font-size 14px
    padding-bottom 30px

    code {
      font-weight $font-weight-bolder
    }
  }

  a {
    color #da322c

    &:hover,
    &:hover {
      text-decoration underline
    }
  }

  $list-padding-left = 24px;

  ol {
    margin 0
    padding-bottom 30px
    list-style-type decimal
    padding-left $list-padding-left
  }

  ul {
    margin 0
    padding-bottom 30px
    list-style-type disc
    padding-left $list-padding-left

    > ul {
      list-style-type circle
      padding-left $list-padding-left
    }
  }

  blockquote {
    border-left 2px solid #da322c
    padding 0 20px
    margin-bottom 30px
    font-size 14px
    color #525d62

    code {
      display block
      overflow auto
      font-size 12px
      word-break normal
      word-wrap normal
      white-space pre
    }

    p:last-child {
      margin-bottom 0
      padding-bottom 0
    }
  }

  pre {
    background-color #424b54
    word-wrap normal
    font-family Consolas, "Liberation Mono", Menlo, Courier, monospace
    font-size 13px
    color #f6ebc0
    line-height 17px
    border-radius 0
    border none
    border-left 3px solid #da322c
    padding 10px 15px
    margin-bottom 30px

    code {
      display block
      padding 0
      margin 0
      overflow auto
      word-break normal
      word-wrap normal
      white-space pre
      background-color transparent
      color inherit

      .hljs {
        display: block;
        overflow-x: auto;
        padding: 0.5em;
        background: #23241f;
      }

      .hljs,
      .hljs-tag,
      .hljs-subst {
        color: #f8f8f2;
      }

      .hljs-strong,
      .hljs-emphasis {
        color: #a8a8a2;
      }

      .hljs-bullet,
      .hljs-quote,
      .hljs-number,
      .hljs-regexp,
      .hljs-literal,
      .hljs-link {
        color: #ae81ff;
      }

      .hljs-code,
      .hljs-title,
      .hljs-section,
      .hljs-selector-class {
        color: #f6ebc0;
      }

      .hljs-strong {
        font-weight: bold;
      }

      .hljs-emphasis {
        font-style: italic;
      }

      .hljs-selector-tag,
      .hljs-name,
      .hljs-attr {
        color: #f5a623;
      }

      .hljs-keyword {
        color #ffffff
      }

      .hljs-symbol,
      .hljs-attribute {
        color: #66d9ef;
      }

      .hljs-params,
      .hljs-class .hljs-title {
        color: #f8f8f2;
      }

      .hljs-string {
        color: #d5ffab;
      }

      .hljs-type,
      .hljs-built_in,
      .hljs-selector-id,
      .hljs-selector-attr,
      .hljs-addition,
      .hljs-variable,
      .hljs-template-variable {
        color: #c2ec98;
      }

      .hljs-comment,
      .hljs-deletion,
      .hljs-meta {
        color: #aaaabb;
      }
    }
  }

  table {
    width 100%

    thead {
      border-top 1px solid #da322c

      tr {
        th {
          padding 13px 0
          text-align left

          &:first-child {
            padding-left 20px
          }

          &:last-child {
            padding-right 20px
          }
        }
      }
    }

    tbody {
      tr {
        border-top 1px solid #d8d8d8

        td {
          padding 13px 0
          text-align left

          &:first-child {
            padding-left 20px
          }

          &:last-child {
            padding-right 20px
          }
        }
      }
    }
  }
}