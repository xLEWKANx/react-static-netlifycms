html,
body {
  background #424b54
  background linear-gradient(180deg, #2c302e 0%, #555f67 60%, #424b54 100%) 0 0 /100% 702px no-repeat


  @media (max-width $screen-md-min) {
    background-position 0 62px
    background-size auto
  }

  &.internal {
    background-image none
  }
}

body {
  @media (max-width $screen-md-min) {
    padding-top 60px
  }
}

.btn-big-orange {
  display block
  height 50px
  padding 0 20px
  text-transform uppercase
  background-image linear-gradient(-180deg, #fbd47e 0%, #f6ad0c 100%)
  box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.38)
  border-radius 5px
  font-size 16px
  color #1b2021
  letter-spacing 1.33px
  line-height 50px
  font-weight $font-weight-bolder
  border none

  &:active {
    background-image linear-gradient(-180deg, #f6ad0c 0%, #fbd47e 100%)
  }
}

.container
  container-fixed()

  @media (min-width $screen-sm-min)
    width 100%
    max-width $container-sm
  @media (min-width $screen-md-min)
    width 100%
    max-width $container-md
  @media (min-width $screen-lg-min)
    width 100%
    max-width $container-lg