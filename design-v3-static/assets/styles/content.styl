body {
  white-content-block-title = @block {
    position relative
    max-width 165px
    height 54px
    margin 50px auto 20px
    font-size 16px
    color #da322c
    letter-spacing 1.33px
    line-height 19px
    text-align center
    text-transform uppercase
    font-weight $font-weight-bolder

    &:after {
      content ' '
      display block
      position absolute
      left 33%
      right 33%
      bottom 0
      border-bottom 2px solid rgba(30, 54, 61, 0.26)
    }

    @media (max-width $screen-md-min) {
      font-size 14px
      margin 26px auto 10px
      height auto

      &:after {
        content ''
        border none
      }
    }
  }

  white-content-block-desc = @block {
    max-width 632px
    margin 0 auto
    font-size 32px
    color #1b2021
    line-height 44px
    font-weight $font-weight-normal
    text-align center

    @media (max-width $screen-md-min) {
      margin-top 0
      padding 0 5%
      font-size 22px
      line-height 32px
    }
  }

  .content {
    .promo-banner {
      height 640px
      background-image url($pathsImages + 'bg-main.svg')
      background-repeat no-repeat
      background-position right 0px top 70px


      @media (max-width $screen-md-min) {
        height 320px
        background-position right 0 top 30px
        background-size auto 280px
      }

      @media (max-width $screen-xlg) and (min-width $screen-lg-min) {
        background-position right 80px top 70px
      }

      @media (min-width $screen-xlg) {
        background-position right 200px top 70px
      }

      .secure-the-future {
        text-transform uppercase
        font-weight $font-weight-light
        font-size 50px
        color $color-white
        line-height 61px
        padding-top 140px
        margin 0

        @media (max-width $screen-md-min) {
          padding 40px 5% 0 5%
          font-size 31px
          line-height 37px
        }
      }

      .secure-the-future-desc {
        max-width 650px
        font-weight $font-weight-normal
        font-size 20px
        color $color-white
        line-height 36px
        margin-top 40px

        @media (max-width $screen-md-min) {
          width auto
          margin-top 18px
          padding 0 5%
          font-weight $font-weight-bold
          font-size 14px
          line-height 25px
        }
      }

      .btn-get-started {
        margin 50px 0 0
        width 288px
        font-size 16px

        @media (max-width $screen-md-min) {
          font-weight $font-weight-bolder
          margin 35px 5% 0 5%
        }
      }
    }

    .feed {
      $feed-height = 70px

      height 70px
      background #2c302e

      @media (max-width $screen-lg-min) {
        height auto
      }

      .feed-item {
        width 100%

        a {
          display block
          color $color-white
        }

        .tip {
          width 26px
          height $feed-height
          background transparent url($pathsImages + 'bubble-feed.svg') 0 50% no-repeat

          @media (max-width $screen-lg-min) {
            background-position 50% 50%
          }
        }

        .delimiter {
          padding 0 20px
          color #9b9b9b
        }

        .feed-content {
          max-width 855px
          color $color-white
          font-size 16px

          @media (max-width $screen-lg-min) {
            text-align center
            padding 0 5% 20px
          }

          > a {
            @extend .text-ellipsis;

            @media (max-width $screen-lg-min) {
              text-overflow none
              overflow visible
              white-space normal
            }
          }
        }

        .go {
          width 36px
          height $feed-height
          background transparent url($pathsImages + 'arrow-feed.svg') 100% 50% no-repeat
        }
      }
    }

    .what-we-offer {
      padding-bottom 80px

      @media (max-width $screen-md-min) {
        padding-bottom 40px
      }

      h3.title {
        {white-content-block-title}
      }

      h4.description {
        {white-content-block-desc}
      }

      .shields {
        margin-top 66px

        @media (max-width $screen-md-min) {
          margin-top 60px
        }

        .shield-item {
          padding 0 20px

          @media (max-width $screen-lg-min) {
            padding-bottom 40px

            &:last-child {
              padding-bottom 0
            }
          }

          .shield-icon {
            height 107px

            @media (max-width $screen-md-min) {
              height 90px
            }

            &.step1 {
              background transparent url($pathsImages + 'next-gen.svg')
              background-position 50% 50%

              @media (min-width $screen-sm-min) and (max-width $screen-md-min) {
                background-position 50% 50%
              }
            }

            &.step2 {
              background transparent url($pathsImages + 'encrypt.svg')
              background-position 33px 50%

              @media (min-width $screen-sm-min) and (max-width $screen-lg-min) {
                background-position 50% 50%
              }
            }

            &.step3 {
              background transparent url($pathsImages + 'identities.svg')
              background-position 40px 50%

              @media (min-width $screen-sm-min) and (max-width $screen-lg-min) {
                background-position 50% 50%
              }
            }

            &.step4 {
              background transparent url($pathsImages + 'platforms.svg')
              background-position 38px 50%

              @media (min-width $screen-sm-min) and (max-width $screen-lg-min) {
                background-position 50% 50%
              }
            }

            &.step1,
            &.step2,
            &.step3,
            &.step4 {
              background-repeat no-repeat
              background-size auto 100%

              @media (max-width $screen-md-min) {
                background-position 50% 50%
              }
            }
          }

          .shield-title {
            margin-top 24px
            font-size 18px
            color #1f363d
            line-height 24px
            font-weight $font-weight-bolder
            text-align center
          }

          .shield-desc {
            margin-top 20px
            font-size 16px
            color #414b4f
            line-height 23px
            font-weight $font-weight-normal
            text-align center
          }
        }
      }

      .btn-download-apps {
        margin 70px auto 0
        width 288px

        @media (max-width $screen-lg-min) {
          margin-top 50px
        }
      }
    }

    .our-partners {
      background #f0f0f0

      .title {
        margin-top 0
        padding-top 50px
        font-size 16px
        color #888888
        letter-spacing 1.33px
        line-height 19px
        text-align center
        text-transform uppercase
        font-weight $font-weight-bolder
      }

      .logos {
        padding 20px 0 40px
        text-align center

        @media (max-width $screen-md-min) {
          padding-top 20px
        }

        .logo {
          display inline-block
          min-height 46px
          background-color transparent
          background-position 50% 50%
          background-repeat no-repeat
          background-size 100% auto
          margin 5px 30px

          &:first-child {
            margin-left 0
          }

          &:last-child {
            margin-right 0
          }

          &.jquery {
            width 180px
            background-image url($pathsImages + 'jquery_logo.svg')
          }

          &.bloomberg {
            width 220px
            background-image url($pathsImages + 'Bloomberg_logo.svg')
          }

          &.google {
            width 138px
            background-image url($pathsImages + 'google_logo.svg')
          }

          &.evernote {
            width 182px
            background-image url($pathsImages + 'evernote_logo.svg')
          }

          @media (max-width 920px) {
            max-width 160px
            margin 5px 20px
          }

          @media (max-width $screen-md-min) {
            max-width 120px
            margin 5px 10px
          }
        }
      }
    }

    .advantages {
      padding-bottom 80px

      @media (max-width $screen-md-min) {
        padding-bottom 40px
      }

      h3.title {
        {white-content-block-title}
      }

      h4.description {
        {white-content-block-desc}
      }

      .slides {
        margin-top 70px

        @media (max-width $screen-md-min) {
          margin-top 10px
        }

        .carousel {
          max-height 590px
          padding-bottom 20px

          @media (max-width $screen-md-min) {
            padding-bottom 50px
          }

          .carousel-control {
            width 5%

            @media (max-width $screen-lg-min) {
              width 8%
            }

            &.left {
              opacity 1
              background transparent url($pathsImages + 'arrow-left.svg') 50% 28% no-repeat
            }

            &.right {
              opacity 1
              background transparent url($pathsImages + 'arrow-right.svg') 50% 28% no-repeat
            }

            @media (max-width $screen-md-min) {
              &.left,
              &.right {
                display none
              }
            }
          }

          .carousel-inner {
            .item {
              min-height 480px

              @media (max-width $screen-sm-min) {
                min-height 360px
              }

              @media (min-width $screen-xs-min) and (max-width $screen-sm-min) {
                min-height 340px
              }

              @media (min-width $screen-sm-min) and (max-width $screen-md-min) {
                min-height 380px
              }

              @media (min-width $screen-md-min) and (max-width $screen-lg-min) {
                min-height 440px
              }

              .item-content {
                width 70%
                margin 40px auto

                @media (max-width $screen-md-min) {
                  margin-top 10px
                }

                .item-title {
                  padding-bottom 18px
                  font-size 26px
                  color #1f363d
                  line-height 31px
                  font-weight $font-weight-bolder
                  text-align center

                  @media (max-width $screen-md-min) {
                    font-size 18px
                    line-height 22px
                  }
                }

                .item-desc {
                  font-size 16px
                  color #525d62
                  line-height 26px
                  font-weight $font-weight-normal
                  text-align center

                  @media (max-width $screen-md-min) {
                    font-size 14px
                    line-height 24px
                  }
                }
              }

              .item-img {
                width 90%
                min-height 312px
                margin 0 auto
                background-color transparent
                background-position 50% 50%
                background-repeat no-repeat
                background-size 60% auto

                @media (max-width $screen-sm-min) {
                  min-height 168px
                  background-size 80% auto
                }

                @media (min-width $screen-xs-min) and (max-width $screen-sm-min) {
                  min-height 168px
                  background-size 80% auto
                }

                @media (min-width $screen-sm-min) and (max-width $screen-md-min) {
                  min-height 232px
                }

                @media (min-width $screen-md-min) and (max-width $screen-lg-min) {
                  min-height 288px
                }
              }

              &.developers {
                .item-img {
                  background-image url($pathsImages + 'slide-developers.svg')
                }

                @media (max-width $screen-md-min) {

                }
              }

              &.enterprise {
                .item-img {
                  background-image url($pathsImages + 'slide-enterprise.svg')
                }

                @media (max-width $screen-md-min) {

                }
              }

              &.cloud {
                .item-img {
                  background-image url($pathsImages + 'slide-cloud.svg')
                }

                @media (max-width $screen-md-min) {

                }
              }

              &.secure-internet {
                .item-img {
                  background-image url($pathsImages + 'slide-secure-internet.svg')
                }

                @media (max-width $screen-md-min) {

                }
              }

              &.identity {
                .item-img {
                  background-image url($pathsImages + 'slide-identity.svg')
                }

                @media (max-width $screen-md-min) {

                }
              }
            }
          }
        }

        .slides-menu {
          position absolute
          bottom 0
          left 0
          width 100%
          margin 0
          text-align center

          @media (max-width $screen-md-min) {
            width 90%
            left 50%
            margin-left: -45%
          }

          a {
            display inline-block
            margin 0
            width auto
            height auto
            padding-left 37px
            padding-right 37px
            border none
            border-radius 0
            border-left 2px solid #c4c4c4
            font-size 16px
            line-height 19px
            color #888888
            letter-spacing 1.33px
            text-transform uppercase
            font-weight $font-weight-bolder
            text-indent 0

            @media (max-width $screen-md-min) {
              display block
              border none
              padding 0
              text-align center
              font-size 16px
              line-height 19px
            }

            @media (min-width $screen-md-min) and (max-width $screen-lg-min) {
              font-size 14px
              line-height 8px
              padding-left 24px
              padding-right 24px
            }

            &:first-child {
              padding-left 0
              border none
            }

            &:last-child {
              padding-right 0
            }

            &.active {
              color #da322c
            }
          }
        }
      }
    }

    .what-our-customers-say {
      background #f0f0f0

      .title {
        margin-top 0
        margin-bottom 0
        padding-top 40px
        font-size 18px
        color #888888
        letter-spacing 1.5px
        line-height 22px
        text-align center
        text-transform uppercase
        font-weight $font-weight-bolder

        @media (max-width $screen-lg-min) {
          padding-top 30px
        }
      }

      .cards {
        padding 60px 0 115px

        @media (max-width $screen-lg-min) {
          padding 0 20px 44px
        }

        .card {
          margin-top 25px

          @media (min-width $screen-lg-min) {
            margin-top 40px
          }

          td {
            vertical-align top
            width 1%

            &.sign {
              width 99%
            }
          }

          .avatar {
            display block
            border-radius 50%
          }

          .tip {
            position relative
            height 111px
            background transparent url($pathsImages + 'bubble.png') 0 0 no-repeat
            background-size 100% 100%
            font-size 16px
            color #525d62
            line-height 24px

            .tip-content {
              position absolute
              top 0
              right 0
              bottom 0
              left 7%
              margin 7px
              overflow hidden
            }
          }

          .name,
          .position {
            padding-left 7%
          }

          .name {
            padding-top 10px
            font-size 16px
            color #da322c
            line-height 22.39px
            font-weight $font-weight-bold
          }

          .position {
            font-size 14px
            color #252525
          }
        }
      }
    }

    .not-found-404 {
      padding-top 348px
      min-height 770px
      background-image url($pathsImages + '404.svg')
      background-color #f6f6f6
      background-position 50% 155px
      background-repeat no-repeat
      background-size 350px 155px

      .title {
        padding 0 10px
        text-align center
        font-size 36px
        color #1f363d
        line-height 50px
      }

      .desc {
        padding 0 10px
        text-align center
        font-size 20px
        color #525d62
        line-height 31px

        a {
          color #da322c
        }
      }
    }

    .auth-wrapper {
      background-color #f6f6f6
      border-top 1px solid #bec4c6
      border-bottom 1px solid #bec4c6

      .auth {
        width 500px
        margin 100px auto

        .form-wrapper {
          width 400px
          margin 0 auto

          form {
            $form-error-color = #bb241d

            padding-top 20px

            &.has-errors {
              label {
                color $form-error-color !important
              }
            }

            .errors {
              color $form-error-color
              font-size 12px
              padding-bottom 20px
            }

            .form-group {
              margin 0
              padding-bottom 4px

              &.email-group,
              &.password-group {
                margin-bottom 30px
                border-bottom 1px solid #bec4c6
              }

              label {
                font-size 12px
                color #1f363d
                letter-spacing 1px
                line-height 14px
                text-transform uppercase
                font-weight $font-weight-bolder
                text-align left
                margin 0
                padding 0
              }

              input[type="text"],
              input[type="password"] {
                $input-text-color = #c5cbcd;

                border none
                box-shadow none
                margin 0
                padding 0
                font-size 14px
                line-height 14px
                color #2c302e
                height 14px

                &::-webkit-input-placeholder {
                  color $input-text-color
                }

                &:-moz-placeholder {
                  color $input-text-color
                }

                &::-moz-placeholder {
                  color $input-text-color
                }

                &:-ms-input-placeholder {
                  color $input-text-color
                }
              }
            }
          }
        }

        .top {
          background-color $color-white
          padding 34px 0

          .title {
            margin 0
            padding 0 0 10px
            font-size 36px
            color #1f363d
            line-height 36px
            text-align center
          }

          .cant-access {
            text-align center
            padding 5px 0 0

            a {
              font-size 12px
              color #da322c
              line-height 22px
            }
          }

          .terms-agreement {
            text-align center
            font-size 10px
            line-height 16px
            padding-top 30px

            a {
              color #da322c
              line-height 22px
            }
          }

          .desc {
            width 279px
            margin 0 auto
            text-align center
            font-size 14px
            color #2c302e
            line-height 22px
          }
        }

        .bottom {
          background-color #e8e8e8
          padding 30px 0

          .create-account {
            display block
            width 280px
            height 40px
            margin 0 auto
            background $color-white
            border-radius 4px
            border none
            font-size 12px
            font-weight $font-weight-bolder
            color #1b2021
            letter-spacing 1px
            line-height 14px
          }
        }

        .btn-auth-orange {
          @extend .btn-big-orange;
          width 80%
          margin 0 auto
          height 40px
          font-size 15px
          font-weight $font-weight-bolder
          line-height 40px
          color #1b2021
          letter-spacing 1.25px
        }
      }
    }

    .terms-of-service-wrapper {
      background-color #f6f6f6
      border-top 1px solid #bec4c6
      border-bottom 1px solid #bec4c6

      .terms-of-service {
        {white-content-block-desc}
        margin-bottom 18px
      }

      .desc {
        color #525d62
        font-weight 400
        padding-bottom 30px
      }
    }
    .privacy-policy-wrapper {
      background-color #f6f6f6
      border-top 1px solid #bec4c6
      border-bottom 1px solid #bec4c6

      .privacy-policy {
        {white-content-block-desc}
        margin-bottom 18px
      }

      .desc {
        color #525d62
        font-weight 400
        padding-bottom 30px
      }
    }

    .dashboard-wrapper {
      background-color $color-white
      border-top 1px solid #bec4c6
      border-bottom 1px solid #bec4c6

      .dashboard-header {
        padding-top 90px
        padding-bottom 30px

        h1 {
          font-size 30px
          line-height 40px
          color #1f363d
          margin 0
        }

        .register-app {
          @extend .btn-big-orange
          font-size 15px
          width 280px
          height 40px
          line-height 40px
          float right
        }
      }

      .dashboard-content {
        padding-bottom 60px

        table {
          thead {
            border-top 1px solid #da322c

            tr {
              th {
                padding 13px
                color #424b54
                font-weight $font-weight-bolder
                text-transform uppercase
                border-bottom none
              }
            }
          }

          tbody {
            tr {
              td {
                padding 13px
                font-size 16px

                .app-name {
                  color #da322c
                }

                .desc {
                  color #525d62
                }

                .token,
                .date {
                  color #1b2021
                }
              }
            }
          }
        }
      }
    }

    .dashboard-form-wrapper {
      background-color #f6f6f6
      border-top 1px solid #bec4c6
      border-bottom 1px solid #bec4c6

      .dashboard-form {
        width 500px
        margin 100px auto

        form {
          $form-error-color = #bb241d

          padding-top 20px

          &.has-errors {
            label {
              color $form-error-color !important
            }
          }

          .errors {
            color $form-error-color
            font-size 12px
