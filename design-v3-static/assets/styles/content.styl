              color #2c302e
              height 14px

              &::-webkit-input-placeholder {
                color $input-text-color
              }

              &:-moz-placeholder {
                color $input-text-color
              }

              &::-moz-placeholder {
                color $input-text-color
              }

              &:-ms-input-placeholder {
                color $input-text-color
              }
            }
          }
        }

        .form-wrapper {
          width 400px
          margin 0 auto
        }

        .top {
          background-color $color-white
          padding 34px 0

          .title {
            margin 0
            padding 0 0 30px
            font-size 36px
            color #1f363d
