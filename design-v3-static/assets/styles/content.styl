          }

          .menu-items-wrapper {
            @media (max-width $screen-lg) {
              padding-right 14px
            }

            $menu-item-active-hover-diff = 1px;
            $menu-item-border-color = #da322c;

            $menu-item-active-padding-left = 10px;
            $menu-item-active-border-width = 2px;
            $menu-item-active-border-style = solid;
            $menu-item-active-border-color = $menu-item-border-color;

            $menu-item-hover-padding-left = $menu-item-active-padding-left + $menu-item-active-hover-diff;
            $menu-item-hover-border-width = $menu-item-active-border-width - $menu-item-active-hover-diff;
            $menu-item-hover-border-style = solid;
            $menu-item-hover-border-color = $menu-item-border-color;

            menu-items = @block {

            }

            menu-item = @block {
              &:last-child {
                border-bottom none
              }

              a {
                display inline-block
                font-size 16px
                color #414b4f
                line-height 30px
                font-weight $font-weight-normal
                padding-left $menu-item-active-padding-left
                border-left-width $menu-item-active-border-width
                border-left-style $menu-item-active-border-style
                border-left-color transparent

                &:hover {
                  color #da322c
                  padding-left $menu-item-hover-padding-left
                  border-left-width $menu-item-hover-border-width
                  border-left-style $menu-item-hover-border-style
                  border-left-color $menu-item-hover-border-color
                }
              }

              &.active > a {
                color #da322c
                border-left-width $menu-item-active-border-width
                border-left-style $menu-item-active-border-style
                border-left-color $menu-item-active-border-color

                &:hover {
                  padding-left $menu-item-active-padding-left
                }
              }
            }

            .menu-items {
              {menu-items}
              .menu-item {
                {menu-item}
              }
            }

            // apply styles to the github menu structure
            ul {
              {menu-items}
              > li {
                {menu-item}
                > ul {
                  {menu-items}
                  border none
                  > li {
                    {menu-item}
                    $menu-item-active-padding-left = $menu-item-active-padding-left * 2;

                    a {
                      padding-left $menu-item-active-padding-left
                      color #888888
                      font-size 15px

                      &:hover {
                        padding-left ($menu-item-hover-padding-left * 2) - $menu-item-active-hover-diff
                      }
                    }

                    &.active > a {
                      &:hover {
                        padding-left $menu-item-active-padding-left
                      }
                    }

                    > ul {
                      {menu-items}
                      border none
                      > li {
                        {menu-item}
                        $menu-item-active-padding-left = $menu-item-active-padding-left * 3;

                        a {
                          padding-left $menu-item-active-padding-left

                          &:hover {
                            padding-left ($menu-item-hover-padding-left * 3) - $menu-item-active-hover-diff
                          }
                        }

                        &.active > a {
                          &:hover {
                            padding-left $menu-item-active-padding-left
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }

