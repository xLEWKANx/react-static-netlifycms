            text-align center
          }
        }

        .bottom {
          background-color $color-white
          padding 0 0 30px

          .create-app {
            @extend .btn-big-orange;
            width 280px
            margin 0 auto
            height 40px
            font-size 15px
            font-weight $font-weight-bolder
            line-height 40px
            color #1b2021
            letter-spacing 1.25px
          }
        }
      }
    }
  }

  &.internal {
    .content {

      .wrapper {
        text-align center
        padding-top 30px
        padding-bottom 30px
        background white
        border-top 1px solid #D8D8D8

        &:nth-child(odd) {
          background #f6f6f6
        }

        .title {
          {white-content-block-desc}
        }

        figure {
          padding 30px 30px 0 30px

          img {
            max-width 72px
            min-height 48px
          }

          figcaption {
            font-size 16px
            line-height 24px
            font-weight $font-weight-bolder
            color #1f363d
            margin-top 20px
          }

          .fig-description {
            margin-top 20px
            font-size 13px
            line-height 21px
            font-weight $font-weight-normal
            color #414b4f
          }
        }

        @media (min-width $screen-md-min) {
          padding-top 50px
          padding-bottom 50px

          figure {

            figcaption {
              font-size 20px
              line-height 28px
            }

            .fig-description {
              font-size 14px
              line-height 22px
            }
          }
        }
      }

      .api-documentations {
        @media (min-width $screen-md-min) {
          .column {
            position relative
            &:not(:first-child):before {
              content ''
              position absolute
              top 70px
              left 0
              height 50%
              border-left 1px solid #dbdedf
            }
          }
          figure {
            padding-left 80px
            padding-right 80px

            img {
              max-width 124px
            }

            figcaption {
              position relative
              padding-bottom 20px
              &:after {
                content ''
                position absolute
                left 43%
                right 43%
                bottom 0
                border 1px solid rgba(30, 54, 61, 0.26)
              }
            }
          }
        }
      }

      .documentations {
