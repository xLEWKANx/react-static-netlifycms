.downloads
  .downloads-title h2
    font-size 40px
    color white
    text-align center

  .choices
    margin-top 30px

    .tab
      padding-left 44px
      padding-top 10px
      padding-bottom 10px
      display inline-block
      background-position-y 2px
      background-repeat no-repeat
      color #a9a8cb

    .end-users
      background-image url(/img/downloads/end-users.png)

    .developers
      background-position-y -4px
      background-image url(/img/downloads/developers.png)

    .developers.active
    .developers:hover
      color white
      background-image url(/img/downloads/developers-active.png)

      span
        color white

    .end-users.active
    .end-users:hover
      color white
      background-image url(/img/downloads/end-users-active.png)

      span
        color white

  .downloads-description
    margin-top 28px
    line-height 26px
    text-align center
    font-size 30px
    width 630px
    color #a9a8cb

  .downloads-links
    margin-top 36px

    .downloads-links-link
      display block
      float left
      margin-left 80px
      text-decoration none

      img
        display block
        width 106px

      div
        margin-top 10px
        color white
        text-align center

  .downloads-developers
    margin-top 38px

    .block
      width 504px
      height 209px
      float left
      margin-left 16px
      padding 16px 48px

      .headline
        img
          float left
        h4
          color white
          font-size 24px
          line-height 70px
          margin-left 98px

      .list
      .description
        color white
        margin-top 12px
        line-height 22px
        font-size 16px

      .list
        list-style-image: url(/img/downloads/list-bullet.png)
        padding-left 20px
        text-indent 4px

      .download-label
        margin-top 6px
        font-size 20px
        color white

        img
          height 32px
          position relative
          top 9px
          left 6px

      .btn-virgil
        margin-top 26px

    .block:first-child
      margin-left 0

    .row
      margin-top 16px

    .row:first-child
      margin-top 0

    .downloads-develoeprs-pass
      background #22478d

    .downloads-develoeprs-sync
      background #484a98

      .download-label
        margin-top 22px

    .downloads-develoeprs-mail
      background #5c3f78

    .downloads-develoeprs-keys
      background #006f65
