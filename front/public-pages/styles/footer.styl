.footer
  position absolute
  bottom 0
  width 100%
  padding-top 35px
  padding-bottom 35px

  @media (max-width: $screen-xs-max)
    padding-bottom 20px

  .footer-copy
    color #6f6d8d
    float left

    @media (max-width: $screen-xs-max)
      text-align center
      font-size 16px

  .footer-links
    margin-left 32px
    float left

    @media (max-width: $screen-xs-max)
      text-align center
      margin 0
      padding 10px 0

      & > .row
        padding 10px 0

    a
      color #d4d4d6
      text-decoration none
      font-size 14px
      margin-left 26px

    a:first-child
      margin-left 0

  .footer-social
    float right

    a
      text-decoration none
      margin-left 16px

      img
        height 18px

    a:first-child
      margin-left 0

    @media (max-width: $screen-xs-max)
      text-align center
      float left
      padding-bottom 30px