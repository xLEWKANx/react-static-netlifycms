{% extends "base.twig" %}

{% block body_content %}
    <div class="page homePage" data-vs-page="home">
        <div class="pageMsg" data-vs-pageMsg-target>
            <div class="pageMsg-text">
                <a href="https://github.com/noisesocket/spec" class="pageMsg-textLink-ns">NoiseSocket</a> Virgil presents NoiseSocket at <a href="https://www.defcon.org/html/defcon-25/dc-25-index.html" class="pageMsg-textLink-dc">DEF CON 25</a>
            </div>
            <button class="pageMsg-close" data-vs-pageMsg-close><i class="icon icon-close-white"></i></button>
        </div>

        {% block header %}
            {{ parent() }}
        {% endblock %}

        {% block content %}
            <div class="container">
                {% include 'front_page/intro_section.twig' with{ 'intro': models.intro_section, 'visible': models.intro_section.is_show } only %}
                {% include 'front_page/use_cases_section.twig' with{ 'use_cases': models.use_cases_section, 'visible': models.use_cases_section.is_show  } only %}
                {% include 'front_page/services_section.twig' with{ 'services': models.services_section, 'visible': models.services_section.is_show } only %}
                {% include 'front_page/clients_section.twig' with{ 'clients': models.clients_section, 'visible': models.clients_section.is_show } only %}
                {% include 'front_page/usage_section.twig' with{ 'usage': models.usage_section, 'visible': models.usage_section.is_show } only %}
                {% include 'front_page/benefits_section.twig' with{ 'benefits': models.benefits_section, 'visible': models.benefits_section.is_show } only %}
                {% include 'front_page/conclusion_section.twig' with{ 'conclusion': models.conclusion_section, 'visible': models.conclusion_section.is_show } only %}
            </div>
        {% endblock %}

        {% block footer %}
            {{ parent() }}
        {% endblock %}
    </div>
{% endblock %}
