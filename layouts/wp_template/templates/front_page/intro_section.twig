{% extends 'common/section.twig' %}

{% block content %}
    <div class="intro">
        {% block intro_section_content %}
            <div class="wrapper">
                <div class="introContentBlock">
                    <div class="newsMsg">
                        <h1 class="newsMsg-headline">
                            <a href="https://github.com/noisesocket/spec">Virgil presents Noise Socket at DEF CON 25</a>
                        </h1>
                    </div>
                    <div class="blockMsg">
                        <h1 class="blockMsg-headline">{{ intro.headline.text }}</h1>
                        <div class="blockMsg-links">
                            {% for link in intro.links %}
                                {% include 'common/link_button/' ~ link.link_button_skin ~ '.twig' with {'link': link} %}
                            {% endfor %}
                        </div>
                    </div>
                    <ul class="introLangList">
                        {% for lang in intro.langs %}
                            <li>
                                <a href="{{ lang.lang_url }}">
                                    <img width="{{ lang.width }}" height="{{ lang.height }}"
                                         src="{{ lang.lang_image.src }}"
                                         alt="{{ lang.lang_image.alt|shortcodes }}">
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}
