{% extends 'common/section.twig' %}

{% block content %}
    <header class="header">
        <div class="header-logo">
            <a href="{{ header.logo.url }}">
                <img src="{{ header.logo.image.src }}" alt="{{ header.logo.image.alt|shortcodes }}">
            </a>
        </div>

        {{ header.header_menu|shortcodes }}

        <div class="headerAuth">
            {% for item in header.auth_links %}
                {% include 'common/link_button/' ~ item.link_button_skin ~ '.twig' %}
            {% endfor %}
        </div>
    </header>
{% endblock %}
