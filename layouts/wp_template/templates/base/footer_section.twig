{% extends 'common/section.twig' %}

{% block content %}
    <footer class="footer">
        <div class="footer-top">
            <div class="wrapper">
                <div class="footerContacts">
                    <div class="footerContacts-logo">
                        <img src="{{ footer.logo.src }}" alt="{{ footer.logo.alt }}">
                    </div>
                    <div class="footerContacts-hashtag">{{ footer.description }}</div>
                    <ul class="footerContacts-socials">
