{% extends 'common/section.twig' %}

{% block content %}
    <div class="cryptogram">
        <div class="wrapper">
            <div class="cryptogramContentBlock">
                <div class="blockMsg">
                    <h2 class="blockMsg-headline">{{ cryptogram.headline|shortcodes }}</h2>
                </div>
                <div class="comparisonBlock comparisonBlock--white cryptogramList">
                    {% for cryptogram in cryptogram.collection %}
                        <div class="comparisonItem cryptogramItem {{ loop.index == 2 ? 'comparisonItem--highlight cryptogramItem--highlight' }}">
                            <div class="cryptogramItem-{{ loop.index == 2 ?  'image' : 'header' }}">
                                <img src="{{ cryptogram.image.src }}"
                                     srcset="{{ cryptogram.image.src | retina(2) }} 2x"
                                     alt="{{ cryptogram.image.alt }}"
                                     width="{{ cryptogram.width }}"
                                     height="{{ cryptogram.height }}"
                                >
                                {% if  loop.index != 2 %}
                                    <div class="cryptogramItem-text">
                                        <h6 class="cryptogramItem-subtitle">{{ cryptogram.headline }}</h6>
                                        <h2 class="cryptogramItem-title">{{ cryptogram.description }}</h2>
                                    </div>
                                {% endif %}
                            </div>
                            <ul class="cryptogramItem-features">
                                {% for item in cryptogram.items %}
                                    <li class="cryptogramItem-feature">
                                        {% if cryptogram.skin == "highlighted" %}
                                            {% include 'common/icons/check_white.twig' only %}
                                        {% else %}
                                            {% include 'common/icons/check_grey.twig' only %}
                                        {% endif %}
                                        <span>{{ item|shortcodes }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
